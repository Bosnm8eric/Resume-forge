# Use an official Node.js runtime
FROM node:20-alpine AS build

# Set working directory
WORKDIR /app

# Copy files
COPY package*.json ./
RUN npm install --production=false

COPY . .

# Build the Next.js app
RUN npm run build

# Use smaller image for runtime
FROM node:20-alpine
WORKDIR /app

# Copy built output + node_modules
COPY --from=build /app ./

EXPOSE 10000
ENV PORT 10000
CMD ["npm", "start"]

services:
  - type: web
    name: resume-forge
    env: node
    plan: free
    buildCommand: npm install && npm run build
    startCommand: npm start
    envVars:
      - key: OPENAI_API_KEY
        sync: false
      - key: NODE_ENV
        value: production
      - key: NEXT_PUBLIC_APP_NAME
        value: Resume-Forge