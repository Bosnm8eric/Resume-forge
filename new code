# Use an official Node.js runtime
FROM node:20-alpine AS build

# Set working directory
WORKDIR /app

# Copy files
COPY package*.json ./
RUN npm install --production=false

COPY . .

# Build the Next.js app
RUN npm run build

# Use smaller image for runtime
FROM node:20-alpine
WORKDIR /app

# Copy built output + node_modules
COPY --from=build /app ./

EXPOSE 10000
ENV PORT 10000
CMD ["npm", "start"]